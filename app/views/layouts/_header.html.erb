<header>
  <div class="container">
    <nav class="navbar fixed-top navbar-expand bavbar-dark bg-dark">
      <%= link_to 'sample app', root_path, id: 'logo', class: "navbar-brand" %>
        <ul class="navbar-nav mr-auto">
          <li class="nav-item"><%= link_to 'Home', root_path, class: 'nav-link' %></li>
          <li class="nav-item"><%= link_to 'Help', help_path, class: 'nav-link' %></li>
          <% if logged_in? %>
            <li class="nav-item"><%= link_to "ユーザー", '#', class: 'nav-link'  %></li>
            <li class="dropdown nav-item">
              <a href="#" class="dropdown-toggle nav-link" data-toggle="dropdown">
                アカウント <b class="caret"></b>
              </a>
              <div class="dropdown-menu">
                <%= link_to "プロフィール", current_user, class: 'dropdown-item' %>
                <%= link_to "設定", '#', class: 'dropdown-item' %>
                <div class="dropdown-divider"></div>
                <%= link_to "ログアウト", logout_path, method: :delete, class: 'dropdown-item' %>
              </div>
            </li>
            <% else %>
              <li class="nav-item"><%= link_to 'Log in', login_path, class: 'nav-link'  %></li>
            <% end %>
        </ul>
    </nav>
